@page "/counter/{initialCount:int?}"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>


@if(currentCount > 3){
    <p>pacciani libero</p>
}

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<MyButton onclick="IncrementCount2" class="btn btn-success">My Button!</MyButton>

<ul>
@for ( int i = 0; i<currentCount; i++){
    <li>lei è imputato di dodici omicidi</li>
}
</ul>
<p>initialCount=@initialCount</p>


<div class="mt-3">
    <!--</><input @onchange="OnChange">-->
    <!--<input @oninput="OnInput">-->
    <input @bind="text" @bind:event="oninput" @bind:after="Search">
    <button @onclick="OnClick">Clear</button>
    <p>@text</p>
    <p>@SearchResults</p>
</div>

<div style="background-color: beige;" @onmouseover="MouseOver" @onmouseout="MouseOut">@divText</div>


