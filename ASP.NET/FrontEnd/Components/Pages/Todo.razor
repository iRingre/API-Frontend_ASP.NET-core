@page "/todo"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>todo</PageTitle>

<h3>Todo (@todos.Count(t => !t.IsDone))</h3>

<ul>
    @foreach (var todo in todos){
        <li>
            <input type="checkbox" @bind="todo.IsDone"/>
            <input @bind="todo.Title"/>
        </li>
    }
</ul>

<input @oninput="newTodos" @onkeydown="Invio"/>
<button @onclick="CreateTodo">Add Todo</button>

@code{
    List<TodoItem> todos = new List<TodoItem>();
    string newTodo = "";
    public class TodoItem
    {
        public string Title { get; set; }
        public bool IsDone { get; set; }

    }
    private void CreateTodo(MouseEventArgs args)
    {
        if (!string.IsNullOrEmpty(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = "";
        }

    }
    private void newTodos(ChangeEventArgs args)
    {
        newTodo = (string)args.Value;
    }
    private void Invio(KeyboardEventArgs e)
    {
        bool control = true;
        foreach (var item in todos)
        {
            if (item.Title == newTodo)
            {
                control = false;
            }
        }
        if (e.Code == "Enter" && control && !string.IsNullOrEmpty(newTodo)) todos.Add(new TodoItem { Title = newTodo });
    }
}